
pipeline {
  agent {
    node {
      label 'jenkins-slave'
    }
  }

  stages {
    //Use this code for inline pipeline script option
    stage('Code checkout') {
      steps {
        //download code from github
        checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/fallenmaverick/jenkins-cicd-java-maven-demo.git']]])
      }

    }
    stage('Build') {
      steps {
        // Run the maven build
        sh '"mvn" -Dmaven.test.failure.ignore clean install'
      }

    }
    stage('Deploy') {
      steps {
        //deploy war on tomcat server
       deploy adapters: [tomcat8(credentialsId: 'tomcat-cred', path: '', url: 'http://3.108.194.173:8080/')], contextPath: null, war: '**/*.war'

      }
    }
  }
}
